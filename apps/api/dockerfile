# ---------- base ----------
FROM node:20.5.0-alpine AS base
WORKDIR /repo
RUN corepack enable


# ---------- prune ----------
FROM base AS prune

WORKDIR /repo

# Copy only files needed to install + prune
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json tsconfig.json ./
COPY apps/api/package.json apps/api/package.json
COPY packages/utils/package.json packages/utils/package.json

# Install deps (turbo is here)
RUN pnpm install --frozen-lockfile

# Now copy full repo for graph analysis
COPY . .

# Run prune
RUN pnpm exec turbo prune --scope=@msgbits/api --docker


# ---------- builder ----------
FROM base AS builder
WORKDIR /repo

# Copy pruned workspace
COPY --from=prune /repo/out/json/ ./
COPY --from=prune /repo/out/pnpm-lock.yaml ./pnpm-lock.yaml
COPY --from=prune /repo/tsconfig.json ./tsconfig.json

# Install only pruned deps
RUN pnpm install --frozen-lockfile

# Copy pruned source
COPY --from=prune /repo/out/full/ ./

# Build API only
RUN pnpm exec turbo build --filter=@msgbits/api...


# ---------- production ----------
FROM node:20.5.0-alpine AS production

WORKDIR /app
RUN addgroup -g 1001 -S nodejs && adduser -S nodejs -u 1001

# Copy workspace structure from pruned output
COPY --from=prune /repo/out/json/ ./
COPY --from=prune /repo/out/pnpm-lock.yaml ./pnpm-lock.yaml

# Enable corepack and install production deps
# Use --filter to install for the specific workspace
RUN corepack enable && pnpm install --prod --frozen-lockfile --filter=@msgbits/api

# Copy the built dist folder
COPY --from=builder --chown=nodejs:nodejs /repo/apps/api/dist ./apps/api/dist

# Copy built packages if needed
COPY --from=builder --chown=nodejs:nodejs /repo/packages ./packages

# Copy runtime files (config, public, templates)
COPY --from=builder --chown=nodejs:nodejs /repo/apps/api/config ./apps/api/config
COPY --from=builder --chown=nodejs:nodejs /repo/apps/api/public ./apps/api/public
COPY --from=builder --chown=nodejs:nodejs /repo/apps/api/templates ./apps/api/templates

ENV NODE_ENV=production \
    NODE_CONFIG_DIR=/app/apps/api/config \
    REDIS_HOST=redis \
    REDIS_PORT=6379

USER nodejs
EXPOSE 8080

CMD ["node", "apps/api/dist/index.js"]
#CMD ["tail", "-f", "/dev/null"]

