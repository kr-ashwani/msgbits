# ---------- base ----------
FROM node:20.5.0-alpine AS base
WORKDIR /repo
RUN corepack enable


# ---------- prune ----------
FROM base AS prune

WORKDIR /repo

# Copy only files needed to install + prune
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json tsconfig.json ./
COPY apps/api/package.json apps/api/package.json

# Install deps (turbo is here)
RUN pnpm install --frozen-lockfile

# Now copy full repo for graph analysis
COPY . .

# Run prune
RUN pnpm exec turbo prune --scope=@msgbits/api --docker

# ---------- builder ----------
FROM base AS builder
WORKDIR /repo

# Copy pruned workspace
COPY --from=prune /repo/out/json/ ./
COPY --from=prune /repo/out/pnpm-lock.yaml ./pnpm-lock.yaml

# Install only pruned deps
RUN pnpm install --frozen-lockfile

# Copy pruned source
COPY --from=prune /repo/out/full/ ./

# Build API only
RUN pnpm exec turbo build --filter=@msgbits/api...


# ---------- deploy ----------
FROM base AS deploy
WORKDIR /repo

# Copy pruned workspace
COPY --from=builder /repo ./

# Create production-only output
RUN pnpm deploy --filter=@msgbits/api --prod --legacy /app


# ---------- production ----------
FROM node:20.5.0-alpine AS production

WORKDIR /app
RUN addgroup -g 1001 -S nodejs && adduser -S nodejs -u 1001

COPY --from=deploy /app ./
RUN chown -R nodejs:nodejs /app

ENV NODE_ENV=production \
    REDIS_HOST=redis \
    REDIS_PORT=6379

USER nodejs
EXPOSE 8080

CMD ["node", "dist/index.js"]
