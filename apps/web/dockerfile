# ---------- base ----------
FROM node:20.5.0-alpine AS base
WORKDIR /repo
RUN corepack enable

# ---------- builder ----------
FROM base AS builder
WORKDIR /repo

# Copy full repo for dependency graph
COPY . .

# Install deps needed for turbo prune
RUN pnpm install --frozen-lockfile

# Builds @msgbits/web and workspace dependencies(...) it needs
RUN pnpm --filter=@msgbits/web... build

# Prune only web app
RUN pnpm exec turbo prune --scope=@msgbits/web --docker

# Deploy creates fat node_modules with all dependencies
RUN pnpm --filter=@msgbits/web deploy --prod --legacy /prod/web 

# ---------- production ----------
FROM node:20.5.0-alpine AS production
WORKDIR /app

ENV NODE_ENV=production \
    PORT=3000 \
    HOSTNAME=0.0.0.0

# Non-root user
RUN addgroup -S nodejs -g 1001 && \
    adduser -S -G nodejs -u 1001 nextjs

# Copy standalone output, package.json and node_modules from builder
COPY --from=builder --chown=nextjs:nodejs /repo/apps/web/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /repo/apps/web/.next/static ./apps/web/.next/static
COPY --from=builder --chown=nextjs:nodejs /repo/apps/web/public ./apps/web/public

USER nextjs
EXPOSE 3000

# Start Next.js standalone server
CMD ["node", "apps/web/server.js"]