FROM node:20-alpine AS builder
WORKDIR /repo

RUN corepack enable

# Copy workspace configuration files
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json ./
COPY apps/web/package.json apps/web/package.json

# Install dependencies
RUN pnpm install --filter msgbits-web... --frozen-lockfile

# Copy source code
COPY apps/web ./apps/web

WORKDIR /repo/apps/web

# Build Next.js application
RUN pnpm turbo build --filter=msgbits-web


# -------- production dependencies --------
FROM node:20-alpine AS deps
WORKDIR /repo

RUN corepack enable

# Copy workspace files
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json ./
COPY apps/web/package.json apps/web/package.json

# Install production dependencies only
RUN pnpm install --filter msgbits-web --prod --frozen-lockfile


# -------- production runtime --------
FROM node:20-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production \
    PORT=3000 \
    HOSTNAME=0.0.0.0

# Create non-root user
RUN addgroup -S nodejs -g 1001 && \
    adduser -S -G nodejs -u 1001 nextjs

# Copy production dependencies
COPY --from=deps --chown=nextjs:nodejs /repo/node_modules ./node_modules
COPY --from=deps --chown=nextjs:nodejs /repo/apps/web/node_modules ./apps/web/node_modules

# Copy Next.js build output
COPY --from=builder --chown=nextjs:nodejs /repo/apps/web/public ./apps/web/public
COPY --from=builder --chown=nextjs:nodejs /repo/apps/web/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /repo/apps/web/.next/static ./apps/web/.next/static

USER nextjs
EXPOSE 3000

CMD ["node", "apps/web/server.js"]