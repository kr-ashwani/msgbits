{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override for browser environment
    "lib": ["dom", "dom.iterable", "ES2022"],
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "useDefineForClassFields": false,
    "importHelpers": false,

    // Next.js specific
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Allow JS files (for Next.js config files)
    "allowJs": true,

    // Next.js handles bundling
    "noEmit": true,

    // Path aliases (optional - only if you want @/* pattern)
    // Otherwise workspace packages work without this
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
